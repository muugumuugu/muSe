	window.onload=function(){
	let piece=window.location.href.split('/');
	piece.pop();
	document.getElementById('url').innerHTML=piece.join('/')+'\/play.html?playlistid=id';
	document.getElementById('jsonp').innerHTML=piece.join('/')+'\/play.html?playlist={"dat":[--arr of song urls--]}';
	document.getElementById('format').innerHTML=piece.join('/')+'\/music\/albumOrartistOrGenre\/SongName.mp3';
	};
